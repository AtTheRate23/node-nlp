    <script>
        var subscriptionKey = "5b0e8f632ebf41edb22f3e34d6de23ab";
        var serviceRegion = "centralindia";
        var languageTargetOptions = "hi-IN";
        var languageSourceOptions = "hi-IN"; // Default source language (e.g., Hindi)

        var SpeechSDK;
