<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatBot</title>
</head>

<body>
    <!-- Add the FAB at the bottom right corner -->
    <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
        <a class="btn-floating btn-large red" id="chat-btn">
            <i class="fas fa-comment"></i>
        </a>
    </div>

    <!-- The modal for the chat UI -->
    <div id="chat-modal" class="modal">
        <div class="modal-content">
            <h4>Chat UI</h4>
            <!-- Your chat UI content here -->
            <div id="chat-log"></div>
            <input type="text" id="chat-input" placeholder="Type a message...">
            <button id="send-btn">Send</button>
        </div>
    </div>

    <!-- Add JavaScript code to toggle the modal -->
    <script>
        document.getElementById('chat-btn').addEventListener('click', function () {
            var modal = document.getElementById('chat-modal');
            modal.style.display = 'block';
        });

        document.getElementById('send-btn').addEventListener('click', function () {
            // Handle send button click logic here
            var message = document.getElementById('chat-input').value;
            document.getElementById('chat-log').innerHTML += `<p>You: ${message}</p>`;
            document.getElementById('chat-input').value = '';
        });

        // Add event listener to close the modal when clicking outside
        window.addEventListener('click', function (event) {
            if (event.target == document.getElementById('chat-modal')) {
                document.getElementById('chat-modal').style.display = 'none';
            }
        });
    </script>
</body>

</html>